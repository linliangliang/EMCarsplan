<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item"
    android:padding="10dp"
    android:id="@+id/Enable_Item"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:id="@+id/CXCH_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/CX_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColor"
                android:textSize="15sp"
                android:text="车型:"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/CX_Edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:singleLine="true"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColor"
                android:textSize="15sp"
                android:text="车号"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/CH_Edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:singleLine="true"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/Add_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:background="@drawable/buttonadd"
                android:textSize="25dp"
                android:text="+"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/JuDuan_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CXCH_Layout"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/JU_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColor"
                android:textSize="15sp"
                android:text="局段"
                android:layout_weight="1"/>

<!--            <AutoCompleteTextView
                android:id="@+id/JU_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColor"
                android:layout_marginRight="15sp"
                android:textSize="15sp"
                android:text="局段"
                android:layout_weight="1"/>-->

            <AutoCompleteTextView
                android:id="@+id/JU_Edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:singleLine="true"
                android:textSize="14sp"/>
<!--            <EditText
                android:id="@+id/JU_Edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:singleLine="true"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/PracticeCars_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColor"
                android:textSize="15sp"
                android:text="实际进车"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/PracticeCars_Edit"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:singleLine="true"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/CarsPlanAndManager_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/JuDuan_Layout"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/CarsPlan_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColor"
                android:textSize="15sp"
                android:text="预计进车"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/CarsPlan_Edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:singleLine="true"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/Maneger_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColor"
                android:textSize="15sp"
                android:text="负责人"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/Manager_Edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:singleLine="true"
                android:hint="姓名(工号)"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="25sp"
                android:layout_height="25sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>